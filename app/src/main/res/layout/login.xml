<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical">
	<ScrollView
		android:id="@+id/scroll"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:background="#FFFFFF">
		<LinearLayout
			android:id="@+id/linear_main"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:background="#FFFFFF"
			android:gravity="center_horizontal"
			android:orientation="vertical">
			<TextView
				android:id="@+id/tx_title"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginLeft="35dp"
				android:layout_marginTop="20dp"
				android:layout_marginRight="35dp"
				android:paddingLeft="8dp"
				android:paddingTop="5dp"
				android:paddingBottom="5dp"
				android:text="Welcome back"
				android:textSize="30sp"
				android:textColor="#212121"
				android:singleLine="true"
				android:layout_gravity="center_horizontal|center_vertical" />
			<LinearLayout
				android:id="@+id/l_email"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginLeft="35dp"
				android:layout_marginTop="80dp"
				android:layout_marginRight="35dp"
				android:layout_marginBottom="8dp"
				android:padding="7dp"
				android:background="#EEEEEE"
				android:gravity="center_vertical"
				android:orientation="horizontal">
				<ImageView
					android:id="@+id/im_email"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginLeft="5dp"
					android:src="@drawable/menu_mail"
					android:scaleType="center" />
				<EditText
					android:id="@+id/tx_email"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:padding="8dp"
					android:background="@android:color/transparent"
					android:textSize="14sp"
					android:textColor="#000000"
					android:hint="Email address"
					android:textColorHint="#607D8B"
					android:singleLine="true"
					android:imeOptions="actionNext" />
			</LinearLayout>
			<LinearLayout
				android:id="@+id/l_pass"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginLeft="35dp"
				android:layout_marginTop="8dp"
				android:layout_marginRight="35dp"
				android:layout_marginBottom="8dp"
				android:padding="7dp"
				android:background="#EEEEEE"
				android:gravity="center_vertical"
				android:orientation="horizontal">
				<ImageView
					android:id="@+id/im_pass"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginLeft="5dp"
					android:src="@drawable/menu_secret"
					android:scaleType="center" />
				<EditText
					android:id="@+id/tx_password"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:padding="8dp"
					android:background="@android:color/transparent"
					android:textSize="14sp"
					android:textColor="#000000"
					android:hint="Password"
					android:textColorHint="#607D8B"
					android:singleLine="true"
					android:inputType="textPassword"
					android:imeOptions="actionDone"
					android:layout_weight="1" />
				<ImageView
					android:id="@+id/im_forget_pass"
					android:layout_width="20dp"
					android:layout_height="20dp"
					android:layout_marginRight="5dp"
					android:src="@drawable/menu_help"
					android:scaleType="fitCenter" />
			</LinearLayout>
			<LinearLayout
				android:id="@+id/button_continue"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginLeft="35dp"
				android:layout_marginTop="8dp"
				android:layout_marginRight="35dp"
				android:layout_marginBottom="8dp"
				android:padding="7dp"
				android:background="#00BCD4"
				android:gravity="center_horizontal|center_vertical"
				android:orientation="horizontal">
				<TextView
					android:id="@+id/button_text"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:padding="8dp"
					android:text="Login"
					android:textSize="14sp"
					android:textColor="#FFFFFF" />
			</LinearLayout>
			<LinearLayout
				android:id="@+id/div"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginLeft="38dp"
				android:layout_marginRight="38dp"
				android:gravity="center_vertical"
				android:orientation="horizontal">
				<LinearLayout
					android:id="@+id/devider1"
					android:layout_width="wrap_content"
					android:layout_height="1dp"
					android:background="#E0E0E0"
					android:orientation="horizontal"
					android:layout_weight="1" />
				<TextView
					android:id="@+id/tx_inf"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:padding="8dp"
					android:text="OR"
					android:textSize="14sp"
					android:textColor="#616161" />
				<LinearLayout
					android:id="@+id/devider2"
					android:layout_width="wrap_content"
					android:layout_height="1dp"
					android:padding="8dp"
					android:background="#E0E0E0"
					android:orientation="horizontal"
					android:layout_weight="1" />
			</LinearLayout>
			<LinearLayout
				android:id="@+id/button_mode"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginLeft="35dp"
				android:layout_marginTop="8dp"
				android:layout_marginRight="35dp"
				android:layout_marginBottom="8dp"
				android:padding="7dp"
				android:background="#EEEEEE"
				android:gravity="center_horizontal|center_vertical"
				android:orientation="horizontal">
				<TextView
					android:id="@+id/tx_mode"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:padding="8dp"
					android:text="Create new account"
					android:textSize="14sp"
					android:textColor="#000000" />
			</LinearLayout>
		</LinearLayout>
	</ScrollView>
</LinearLayout>
